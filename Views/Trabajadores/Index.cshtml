@model IEnumerable<TrabajadoresApp.Models.Trabajador>

@{
    ViewData["Title"] = "Gestión de Trabajadores";
}

<div class="container-fluid py-4">
    <!-- Header Section Mejorado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card custom-header-card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="header-icon-container me-3">
                                    <i class="bi bi-people-fill header-icon"></i>
                                </div>
                                <div>
                                    <h1 class="h3 mb-1 text-white">@ViewData["Title"]</h1>
                                    <p class="mb-0 text-white">Sistema integral de gestión de personal</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <a asp-action="Create" class="btn btn-success btn-lg shadow">
                                <i class="bi bi-person-plus me-2"></i>Nuevo Trabajador
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards Mejoradas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-1 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title text-white mb-1">@Model.Count()</h3>
                            <p class="card-text text-white-75 mb-0">Total Trabajadores</p>
                        </div>
                        <div class="stat-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 4px;">
                        <div class="progress-bar bg-white" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-2 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title text-white mb-1">@Model.Count(t => t.Sexo == "Masculino")</h3>
                            <p class="card-text text-white-75 mb-0">Hombres</p>
                        </div>
                        <div class="stat-icon">
                            <i class="bi bi-gender-male"></i>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 4px;">
                        <div class="progress-bar bg-white" style="width: @((Model.Count(t => t.Sexo == "Masculino") * 100) / (Model.Count() == 0 ? 1 : Model.Count()))%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title text-white mb-1">@Model.Count(t => t.Sexo == "Femenino")</h3>
                            <p class="card-text text-white-75 mb-0">Mujeres</p>
                        </div>
                        <div class="stat-icon">
                            <i class="bi bi-gender-female"></i>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 4px;">
                        <div class="progress-bar bg-white" style="width: @((Model.Count(t => t.Sexo == "Femenino") * 100) / (Model.Count() == 0 ? 1 : Model.Count()))%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title text-white mb-1">@Model.Average(t => t.Edad).ToString("0")</h3>
                            <p class="card-text text-white-75 mb-0">Edad Promedio</p>
                        </div>
                        <div class="stat-icon">
                            <i class="bi bi-calendar-heart"></i>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 4px;">
                        <div class="progress-bar bg-white" style="width: 65%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages Mejorado -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-custom-success alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-3 alert-icon"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-title mb-1">¡Operación Exitosa!</h6>
                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <!-- Filtros Section Mejorado -->
    <div class="card custom-filter-card mb-4">
        <div class="card-header bg-transparent border-0 pb-0">
            <h6 class="card-title mb-0">
                <i class="bi bi-funnel-fill me-2 text-primary"></i>Filtros Avanzados
            </h6>
        </div>
        <div class="card-body pt-2">
            <div class="row g-3 align-items-end">
                <div class="col-lg-3 col-md-6">
                    <label for="filtroSexo" class="form-label fw-semibold small text-uppercase text-muted">Filtrar por Sexo</label>
                    <div class="input-group input-group-custom">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-gender-ambiguous text-primary"></i>
                        </span>
                        <select id="filtroSexo" class="form-select border-start-0">
                            <option value="">Todos los sexos</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <label for="busquedaTexto" class="form-label fw-semibold small text-uppercase text-muted">Búsqueda por Nombre</label>
                    <div class="input-group input-group-custom">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-primary"></i>
                        </span>
                        <input type="text" id="busquedaTexto" class="form-control border-start-0" placeholder="Buscar por nombre o apellido...">
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label for="filtroDocumento" class="form-label fw-semibold small text-uppercase text-muted">Tipo de Documento</label>
                    <div class="input-group input-group-custom">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-card-text text-primary"></i>
                        </span>
                        <select id="filtroDocumento" class="form-select border-start-0">
                            <option value="">Todos los documentos</option>
                            <option value="DNI">DNI</option>
                            <option value="Carnet Extranjería">Carnet Extranjería</option>
                            <option value="Pasaporte">Pasaporte</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6">
                    <button id="btnLimpiarFiltros" class="btn btn-outline-secondary w-100 h-100 d-flex align-items-center justify-content-center">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        <span>Limpiar</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section Mejorado -->
    <div class="card custom-table-card">
        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div class="d-flex align-items-center">
                <h5 class="card-title mb-0 fw-bold text-dark">
                    <i class="bi bi-table me-2 text-primary"></i>Lista de Trabajadores
                </h5>
                <span class="badge custom-badge-primary ms-3" id="contadorRegistros">@Model.Count()</span>
            </div>
            <div class="d-flex align-items-center gap-2">
                <small class="text-muted fw-semibold" id="textoFiltros"></small>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary" id="btnExportar">
                        <i class="bi bi-download me-1"></i>Exportar
                    </button>
                    <button class="btn btn-sm btn-outline-primary" id="btnRefresh">
                        <i class="bi bi-arrow-repeat"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-container">
                    <table class="table custom-table" id="tablaTrabajadores">
                        <thead class="custom-thead">
                            <tr>
                                <th class="ps-4">
                                    <i class="bi bi-person me-2"></i>Nombre Completo
                                </th>
                                <th>
                                    <i class="bi bi-card-text me-2"></i>Documento
                                </th>
                                <th>
                                    <i class="bi bi-gender-ambiguous me-2"></i>Sexo
                                </th>
                                <th>
                                    <i class="bi bi-calendar3 me-2"></i>Edad
                                </th>
                                <th>
                                    <i class="bi bi-geo-alt me-2"></i>Dirección
                                </th>
                                <th>
                                    <i class="bi bi-clock me-2"></i>Fecha Registro
                                </th>
                                <th class="text-center pe-4">
                                    <i class="bi bi-lightning-charge me-2"></i>Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="custom-table-row @(item.Sexo == "Masculino" ? "row-masculino" : "row-femenino")"
                                    data-sexo="@item.Sexo"
                                    data-documento="@item.TipoDocumento"
                                    data-nombre="@item.NombreCompleto.ToLower()">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar @(item.Sexo == "Masculino" ? "avatar-masculino" : "avatar-femenino") me-3">
                                                @if (!string.IsNullOrEmpty(item.Foto))
                                                {
                                                    <img src="@item.Foto" alt="@item.NombreCompleto" class="avatar-img">
                                                }
                                                else
                                                {
                                                    <i class="bi bi-person avatar-icon"></i>
                                                }
                                            </div>
                                            <div class="user-info">
                                                <h6 class="mb-0 user-name">@item.NombreCompleto</h6>
                                                <small class="text-muted user-email">@item.TipoDocumento: @item.NumeroDocumento</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge custom-badge-secondary">@item.TipoDocumento</span>
                                    </td>
                                    <td>
                                        @if (item.Sexo == "Masculino")
                                        {
                                            <span class="badge custom-badge-masculino">
                                                <i class="bi bi-gender-male me-1"></i>@item.Sexo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge custom-badge-femenino">
                                                <i class="bi bi-gender-female me-1"></i>@item.Sexo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="age-indicator">
                                            <span class="age-value">@item.Edad</span>
                                            <small class="text-muted">años</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="address-text" title="@item.Direccion">
                                            @item.Direccion
                                        </div>
                                    </td>
                                    <td>
                                        <div class="date-info">
                                            <div class="date-main">@item.FechaCreacion.ToString("dd/MM/yyyy")</div>
                                            <div class="date-time text-muted">@item.FechaCreacion.ToString("HH:mm")</div>
                                        </div>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action btn-edit" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-action btn-delete" title="Eliminar">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de la tabla -->
                <div class="card-footer bg-transparent border-0">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="table-info">
                                <i class="bi bi-info-circle me-2 text-muted"></i>
                                Mostrando <span class="fw-bold text-primary" id="registrosMostrados">@Model.Count()</span> de @Model.Count() registros
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="table-actions">
                                <button class="btn btn-sm btn-outline-primary" id="btnScrollTop">
                                    <i class="bi bi-arrow-up"></i> Volver Arriba
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-4">
                        <i class="bi bi-people display-1 text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No hay trabajadores registrados</h4>
                    <p class="text-muted mb-4">Comienza agregando el primer trabajador al sistema.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Agregar Primer Trabajador
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filtroSexo = document.getElementById('filtroSexo');
            const filtroDocumento = document.getElementById('filtroDocumento');
            const busquedaTexto = document.getElementById('busquedaTexto');
            const btnLimpiarFiltros = document.getElementById('btnLimpiarFiltros');
            const tablaTrabajadores = document.getElementById('tablaTrabajadores');
            const contadorRegistros = document.getElementById('contadorRegistros');
            const registrosMostrados = document.getElementById('registrosMostrados');
            const textoFiltros = document.getElementById('textoFiltros');
            const btnRefresh = document.getElementById('btnRefresh');
            const btnScrollTop = document.getElementById('btnScrollTop');

            // Aplicar filtros
            function aplicarFiltros() {
                const sexoSeleccionado = filtroSexo.value;
                const documentoTipo = filtroDocumento.value;
                const textoBusqueda = busquedaTexto.value.toLowerCase();

                let registrosVisibles = 0;
                const filas = tablaTrabajadores.querySelectorAll('tbody tr');

                filas.forEach(fila => {
                    const sexoFila = fila.getAttribute('data-sexo');
                    const documentoTipoFila = fila.getAttribute('data-documento');
                    const nombreFila = fila.getAttribute('data-nombre');

                    const coincideSexo = !sexoSeleccionado || sexoFila === sexoSeleccionado;
                    const coincideDocumento = !documentoTipo || documentoTipoFila === documentoTipo;
                    const coincideTexto = !textoBusqueda || nombreFila.includes(textoBusqueda);

                    if (coincideSexo && coincideDocumento && coincideTexto) {
                        fila.style.display = '';
                        registrosVisibles++;
                    } else {
                        fila.style.display = 'none';
                    }
                });

                // Actualizar contadores
                contadorRegistros.textContent = registrosVisibles;
                registrosMostrados.textContent = registrosVisibles;
                actualizarTextoFiltros(sexoSeleccionado, documentoTipo, textoBusqueda);
            }

            function actualizarTextoFiltros(sexo, documento, texto) {
                const filtros = [];
                if (sexo) filtros.push(`Sexo: ${sexo}`);
                if (documento) filtros.push(`Documento: ${documento}`);
                if (texto) filtros.push(`Búsqueda: "${texto}"`);

                textoFiltros.textContent = filtros.length > 0 ? `Filtros activos: ${filtros.join(', ')}` : '';
            }

            // Event listeners
            filtroSexo.addEventListener('change', aplicarFiltros);
            filtroDocumento.addEventListener('change', aplicarFiltros);
            busquedaTexto.addEventListener('input', aplicarFiltros);

            btnLimpiarFiltros.addEventListener('click', function() {
                filtroSexo.value = '';
                filtroDocumento.value = '';
                busquedaTexto.value = '';
                aplicarFiltros();
            });

            btnRefresh.addEventListener('click', function() {
                window.location.reload();
            });

            btnScrollTop.addEventListener('click', function() {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // Efectos hover mejorados
            const filas = tablaTrabajadores.querySelectorAll('tbody tr');
            filas.forEach(fila => {
                fila.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                    this.style.boxShadow = '0 4px 15px rgba(0,0,0,0.1)';
                });

                fila.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                });
            });

            // Exportar datos
            document.getElementById('btnExportar').addEventListener('click', function() {
                // Simulación de exportación
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                });

                Toast.fire({
                    icon: 'success',
                    title: 'Datos exportados exitosamente'
                });
            });
        });
    </script>
}

