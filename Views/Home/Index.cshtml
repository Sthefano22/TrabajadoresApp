@{
    ViewData["Title"] = "Sistema de Gestión de Trabajadores";
}

<div class="container-fluid px-0">
    <!-- Hero Section Mejorada -->
    <section class="hero-section bg-gradient-primary">
        <div class="container">
            <div class="row align-items-center min-vh-80 py-5">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <div class="badge-container mb-4">
                            <span class="badge professional-badge">
                                <i class="bi bi-shield-check me-2"></i>Sistema Certificado
                            </span>
                        </div>
                        <h1 class="hero-title display-4 fw-bold text-white mb-4">
                            Gestión Inteligente de
                            <span class="text-warning">Capital Humano</span>
                        </h1>
                        <p class="hero-subtitle lead text-white-75 mb-5">
                            Plataforma empresarial para administrar, organizar y optimizar
                            la gestión de su personal con tecnología de vanguardia.
                        </p>
                        <div class="hero-actions">
                            <a href="@Url.Action("Index", "Trabajadores")" class="btn btn-light btn-lg me-3 px-4 py-3">
                                <i class="bi bi-play-circle-fill me-2"></i>Iniciar Gestión
                            </a>
                            <a href="#features" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="bi bi-info-circle me-2"></i>Más Información
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-visual">
                        <div class="floating-cards">
                            <div class="card card-1 floating">
                                <div class="card-body">
                                    <i class="bi bi-person-badge text-primary"></i>
                                    <h6>Registro</h6>
                                </div>
                            </div>
                            <div class="card card-2 floating delay-1">
                                <div class="card-body">
                                    <i class="bi bi-search text-success"></i>
                                    <h6>Consulta</h6>
                                </div>
                            </div>
                            <div class="card card-3 floating delay-2">
                                <div class="card-body">
                                    <i class="bi bi-graph-up text-warning"></i>
                                    <h6>Reportes</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-wave">
